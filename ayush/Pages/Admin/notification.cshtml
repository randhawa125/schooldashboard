@page
@model ayush.notificationModel
@{
	ViewData["Title"] = "notification";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";

	<link rel="stylesheet" href="~/css/ionicons.min.css">
}

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Notifications</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li>
						<a class="btn btn-app" asp-page="edit_notification">
							<i class="fas fa-plus"></i> Add New Notification
						</a>
					</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

	<!-- Default box -->
	<div class="card">

		<div class="card-body p-0">
			<table class="table table-striped projects">
				<thead>
					<tr>
						<th style="width: 20%">
							Notification Title
						</th>
						<th style="width: 20%">
							Created By
						</th>
						<th style="width: 20%">
							Created On
						</th>
						<th style="width: 8%" class="text-center">
							Status
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var notification in Model.Notifications)
					{
						<tr>
							<td>
								@notification.Title
							</td>
							<th style="width: 20%">
								@notification.CreatedByUserFullName
							</th>
							<th>
								@notification.CreatedDate.ToShortDateString()
							</th>
							<td class="project-state">
								@if (notification.IsActive)
								{
									<span class="badge badge-success">Active</span>
								}
								else
								{
									<span class="badge badge-warning">Inactive</span>
								}
							</td>
							<td class="project-actions text-right">
								<a class="btn btn-info btn-sm" href="/Admin/edit_notification?id=@notification.Id">
									<i class="fas fa-pencil-alt">
									</i>
									Edit
								</a>
								<a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-id="@notification.Id">
									<i class="fas fa-trash">
									</i>
									Delete
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->

</section>
@section JavaScript
{
	<script src="~/js/demo.js"></script>
}
