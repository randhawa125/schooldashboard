@page
@model ayush.edit_notificationModel
@{
	ViewData["Title"] = "edit_notification";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<section class="content mt-1">
	<form method="post">
		<div class="row">
			<div class="col-md-12">

				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">
							@if (Model.NotificationVM.Id == 0)
							{
								<span>Add New Notification</span>
							}
							else
							{
								<span>Edit Notification</span>
							}
						</h3>

						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
								<i class="fas fa-minus"></i>
							</button>
						</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label>Title</label>
							<input type="text" asp-for="NotificationVM.Title" class="form-control">
							<span class="text-danger" asp-validation-for="NotificationVM.Title"></span>
						</div>
						<div class="form-group">
							<label>End Date</label>
							<input type="date" asp-for="NotificationVM.EndDate" class="form-control">
							<span class="text-danger" asp-validation-for="NotificationVM.EndDate"></span>
						</div>
						<div class="form-group">
							<textarea class="textarea" asp-for="NotificationVM.Description" placeholder="Place some text here"
									  style="width: 100%; height: 400px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
								@Model.NotificationVM.Description</textarea>
							<span class="text-danger" asp-validation-for="NotificationVM.Description"></span>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="checkbox" asp-for="NotificationVM.IsActive" />
							<label asp-for="NotificationVM.IsActive" class="form-check-label">Active</label>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<a href="~/admin/notification" class="btn btn-secondary">Cancel</a>
				<input type="submit" value="Save" class="btn btn-success float-right">
			</div>
		</div>
	</form>
	<br />
</section>

