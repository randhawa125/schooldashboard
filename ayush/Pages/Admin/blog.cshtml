@page
@model ayush.Pages.Admin.blogModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    <link rel="stylesheet" href="~/css/ionicons.min.css">
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Blogs</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li>
                        <a class="btn btn-app" asp-page="add_article">
                            <i class="fas fa-plus"></i> Add New Article
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-app" asp-page="add_admin">
                            <i class="fas fa-file"></i> Export to Excel
                        </a>
                    </li>

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
       
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 10%">
                            Blog ID
                        </th>
                        <th style="width: 20%">
                            Blog Title
                        </th>
                        <th style="width: 30%">
                            Audience
                        </th>
                        <th>
                            Submit Date
                        </th>
                        <th style="width: 8%" class="text-center">
                            Status
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model.Blogs)
                    {
                        <tr>
                            <td>
                                @blog.Id
                            </td>
                            <td>
                                <a>
                                    @blog.Title
                                </a>
                                <br />
                                <small>
                                    Submitted by: @blog.SubmittedByUserFullName
                                </small>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(blog.ClassId) == false)
								{
                                    <span>@blog.ClassId</span>
								}
								else
								{
                                    <span>Public</span>
								}
                            </td>
                            <td class="project_progress">
                                @blog.SubmittedDate.ToShortDateString()
                            </td>
                            <td class="project-state">
                                @if (blog.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Inactive</span>
                                }
                            </td>
                            <td class="project-actions text-right">
                                @*<a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder">
                                    </i>
                                    View
                                </a>*@
                                <a class="btn btn-info btn-sm" href="/Admin/add_article?id=@blog.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-id="@blog.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
@section JavaScript
{
    <script src="~/js/demo.js"></script>
}
