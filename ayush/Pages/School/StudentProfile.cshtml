	function onClassChange(event) {
		if (!event.target.value || event.target.value.length === 0) {
			$('#classNameHelper').html('Class is required.');
			$(".subject-div").hide();
			$(".subject-div .form-control").removeAttr("required");
		}
		else {

			$('#classNameHelper').html('');
