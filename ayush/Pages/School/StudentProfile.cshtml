	function preventFromEnteringAlphabets(event) {
		const pattern = /[0-9]/;
		if (!pattern.test(String.fromCharCode(event.charCode))) {
			event.preventDefault();
		}
	}

	function showBrowseWindow() {
		$("#inputProfilePicture").click();
	}

	function submit() {
		$("#formProfilePicture").submit();
